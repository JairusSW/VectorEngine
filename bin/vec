  // create the template files
}
else if (command === 'tools') {
  // open the tools to make vectors and sounds
}
else if (command === 'run') {
  // run in a browser
}
else if (command === 'build') {
  // build the assemblyscript files
  const asfile = args[2];
}
else {
  // show help
  console.log(`
  Usage:
  ${chalk.yellow('vec init')}
  Initializes the VectorEngine hello world application.

  ${chalk.yellow('vec tools')}
